@import 'normalize.css'
#wrapper
  position absolute 
  width 100% 
  height 100%
  overflow hidden
  #holder 
    width 100% 
    height 100%
    #aside 
      width 10%
      min-width 70px     
      height 100%
      display inline-block
      background-color black
      max-width 100px
      position relative
      .row 
        cursor pointer
        min-height 50px
        border-top 1px solid grey
        &:nth-child(4)
          border-bottom 1px solid grey
        &:first-child
          background-color grey
      #buzzmometer
        background-image url(img/buzzmometer.png)
        background-repeat no-repeat
        background-position center 
        background-size 30px
      #tweetdeck
        background-image url(img/tweetdeck.png)
        background-repeat no-repeat
        background-position center 
        background-size 30px
      #trendsmap
        background-image url(img/trends.png)
        background-repeat no-repeat
        background-position center 
        background-size 30px
      #hootsuite
        background-image url(img/hootsuite.png)
        background-repeat no-repeat
        background-position center 
        background-size 30px
      #logout 
        width 100%
        position absolute
        bottom 10px
        background-image url(img/logout.png)
        background-size 30px
        background-position center
        background-repeat no-repeat
        height 55px
        cursor pointer
        &:hover 
          background-color grey
    #frame-holder 
      display inline-block
      width 89%
      vertical-align top
      min-width 270px
      max-width 1266px
      min-height 100%
      background-image url(img/loading.gif)
      background-position center
      background-size 10%
      background-repeat no-repeat
      iframe 
        border none 
        width 100% 
        height 100%
        position absolute
      .trendsmap,.tweetdeck,.buzzmometer,.hootsuite
        width 100%
        height 100%
        position absolute 
        display none
        background-color cyan
#mask 
  position absolute
  left 0
  top 0
  z-index 9000
  background-color #000
  display none 
#boxes 
  .window 
    position fixed
    width 40px
    height 200px
    display none
    z-index 9999
    padding 20px
#frame-holder
  #hmacontainer,#hmaspacer
    display none !important